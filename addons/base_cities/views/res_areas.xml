<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="res_country_state_cities_areas_view_tree" model="ir.ui.view">
            <field name="name">res_country_state_cities_areas_view_tree</field>
            <field name="model">res.country.state.cities.areas</field>
            <field name="arch" type="xml">
                <list sample="1" editable="bottom">
                    <field name="state_id"/>
                    <field name="city_id"/>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="res_country_state_cities_areas_action" model="ir.actions.act_window">
            <field name="name">State Cities Areas</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.country.state.cities.areas</field>
            <field name="view_mode">list</field>
        </record>

        <menuitem id="res_country_state_cities_areas_menu"
                  name="Areas"
                  parent="contacts.menu_localisation"
                  action="res_country_state_cities_areas_action"
                  sequence="4"/>
    </data>
</odoo>
