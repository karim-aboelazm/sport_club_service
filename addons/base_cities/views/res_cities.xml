<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_country_state_tree_inherit_arabic" model="ir.ui.view">
            <field name="name">view.country.state.tree.inherit.arabic</field>
            <field name="model">res.country.state</field>
            <field name="inherit_id" ref="base.view_country_state_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="name_ar"/>
                </field>
            </field>
        </record>

        <record id="res_country_state_cities_view_tree" model="ir.ui.view">
            <field name="name">res_country_state_cities_view_tree</field>
            <field name="model">res.country.state.cities</field>
            <field name="arch" type="xml">
                <list sample="1" editable="bottom">
                    <field name="state_id"/>
                    <field name="name_en"/>
                    <field name="name_ar"/>
                </list>
            </field>
        </record>

        <record id="res_country_state_cities_view_search" model="ir.ui.view">
            <field name="name">res.country.state.cities.search</field>
            <field name="model">res.country.state.cities</field>
            <field name="arch" type="xml">
                <search string="Search Cities">
                    <field name="name_en" string="English Name"/>
                    <field name="name_ar" string="Arabic Name"/>
                    <field name="state_id" string="State"/>
                </search>
            </field>
        </record>

        <record id="res_country_state_cities_action" model="ir.actions.act_window">
            <field name="name">State Cities</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.country.state.cities</field>
            <field name="search_view_id" ref="res_country_state_cities_view_search"/>
            <field name="view_mode">list</field>
        </record>

        <menuitem id="res_country_state_cities_menu"
                  name="Cities"
                  parent="contacts.menu_localisation"
                  action="res_country_state_cities_action"
                  sequence="3"/>
    </data>
</odoo>
