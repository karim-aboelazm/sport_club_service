<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="sport_club_overview_revenue_pdf_template" inherit_id="sporting_club_reservation_service.report_base_template">
        <xpath expr="//div[@id='report_info']/p" position="replace"/>
        <xpath expr="//div[@id='report_footer_totals']" position="replace"/>
    </template>
    <record id="action_report_sport_club_overview_pdf" model="ir.actions.report">
        <field name="name">Sport Club Overview Report</field>
        <field name="model">report.sport.club.overview.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">sporting_club_reservation_service.sport_club_overview_revenue_pdf_template</field>
        <field name="report_file">sporting_club_reservation_service.sport_club_overview_revenue_pdf_template</field>
        <field name="print_report_name">'Sport Club Report'</field>
        <field name="binding_type">report</field>
    </record>
</odoo>
