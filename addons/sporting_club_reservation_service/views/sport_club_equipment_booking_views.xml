<?xml version="1.0" encoding="utf-8" standalone="no"?>
<odoo>
    <data>
        <record id="sport_club_equipment_booking_view_list" model="ir.ui.view">
            <field name="name">sport.club.equipment.booking.view.list</field>
            <field name="model">sport.club.equipment.booking</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="reservation_id"/>
                    <field name="equipment_product_id"/>
                    <field name="qty"/>
                    <field name="hours"/>
                    <field name="price_subtotal" sum="price_subtotal"/>
                </list>
            </field>
        </record>

        <record id="sport_club_equipment_booking_view_form" model="ir.ui.view">
            <field name="name">sport.club.equipment.booking.view.form</field>
            <field name="model">sport.club.equipment.booking</field>
            <field name="arch" type="xml">
                <form>
                    <field name="active" invisible="True"/>
                    <sheet>
                        <widget name="web_ribbon"
                                title="Archived"
                                bg_color="text-bg-danger"
                                invisible="active"/>
                        <div class="oe_title">
                            <div>
                                <label for="name"/>
                            </div>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="reservation_id"/>
                                <field name="equipment_product_id"/>
                            </group>
                            <group>
                                <field name="qty"/>
                                <field name="hours"/>
                                <field name="price_subtotal"/>
                            </group>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="sport_club_equipment_booking_action" model="ir.actions.act_window">
            <field name="name">Sport Club Equipment Booking</field>
            <field name="res_model">sport.club.equipment.booking</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
