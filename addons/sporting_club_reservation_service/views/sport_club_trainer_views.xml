<?xml version="1.0" encoding="utf-8" standalone="no"?>
<odoo>
    <data>
        <record id="sport_club_trainer_view_list" model="ir.ui.view">
            <field name="name">sport.club.trainer.view.list</field>
            <field name="model">sport.club.trainer</field>
            <field name="arch" type="xml">
                <list>
                    <field name="currency_id" column_invisible="True"/>
                    <field name="partner_id"/>
                    <field name="club_id"/>
                    <field name="calendar_template_id"/>
                    <field name="hourly_rate" sum="hourly_rate"/>
                    <field name="priority" widget="priority"/>
                    <field name="session_count"/>
                </list>
            </field>
        </record>

        <record id="sport_club_trainer_view_form" model="ir.ui.view">
            <field name="name">sport.club.trainer.view.form</field>
            <field name="model">sport.club.trainer</field>
            <field name="arch" type="xml">
                <form>
                    <field name="club_sport_ids" invisible="True"/>
                    <field name="currency_id" invisible="True"/>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_trainer_sessions"
                                    class="oe_stat_button"
                                    icon="fa-bars"
                                    type="object"
                                    invisible="session_count == 0">
                                <div class="o_stat_info">
                                    <field name="session_count" class="o_stat_value"/>
                                    <span class="o_stat_text">Sessions</span>
                                </div>
                            </button>
                        </div>
                        <widget name="web_ribbon"
                                title="Archived"
                                bg_color="text-bg-danger"
                                invisible="active"/>
                        <div class="oe_title">
                            <div>
                                <label for="partner_id"/>
                            </div>
                            <h1>
                                <field name="partner_id" domain="[('is_trainer','=',True)]" options="{'no_create':True,'no_edit':True,'no_open':True,'no_quick_create':True}"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="club_id" options="{'no_create':True,'no_edit':True,'no_open':True,'no_quick_create':True}"/>
                                <field name="sport_ids" widget="many2many_tags" domain="[('id','in',club_sport_ids),('id','not in',sport_ids)]" options="{'no_create':True,'no_edit':True,'no_open':True,'no_quick_create':True}"/>
                                <field name="calendar_template_id" domain="[('club_id','!=',False),('club_id','=',club_id)]" options="{'no_create':True,'no_edit':True,'no_open':True,'no_quick_create':True}"/>
                            </group>
                            <group>
                                <field name="priority" widget="priority"/>
                                <field name="hourly_rate"/>
                                <field name="bio" widget="html"/>
                            </group>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="sport_club_trainer_action" model="ir.actions.act_window">
            <field name="name">Sport Club Trainer</field>
            <field name="res_model">sport.club.trainer</field>
            <field name="view_mode">list,form</field>
        </record>


    </data>
</odoo>
