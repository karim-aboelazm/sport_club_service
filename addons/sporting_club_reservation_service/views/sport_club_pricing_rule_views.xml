<?xml version="1.0" encoding="utf-8" standalone="no"?>
<odoo>
    <data>
        <record id="sport_club_pricing_rule_view_list" model="ir.ui.view">
            <field name="name">sport.club.pricing.rule.view.list</field>
            <field name="model">sport.club.pricing.rule</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="priority"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="tax_id" optional="hide"/>
                    <field name="base_price" optional="hide"/>
                    <field name="state"
                           widget="badge"
                           optional="hide"
                           decoration-muted="state == 'draft'"
                           decoration-success="state == 'open'"
                           decoration-warning="state == 'expired'"
                           decoration-danger="state == 'closed'"/>
                </list>
            </field>
        </record>

        <record id="sport_club_pricing_rule_view_form" model="ir.ui.view">
            <field name="name">sport.club.pricing.rule.view.form</field>
            <field name="model">sport.club.pricing.rule</field>
            <field name="arch" type="xml">
                <form>
                    <field name="currency_id" invisible="True"/>
                    <header>
                        <button name="action_reset_to_draft" string="Reset To Draft" class="oe_highlight" invisible="state != 'open'" type="object"/>
                        <button name="action_runing" string="Running" class="oe_highlight" invisible="state != 'draft'" type="object"/>
                        <button name="action_closed" string="Closed" class="oe_highlight" invisible="state != 'draft'" type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon"
                                title="Archived"
                                bg_color="text-bg-danger"
                                invisible="active"/>
                        <div class="oe_title mb-3">
                            <div>
                                <label for="name"/>
                            </div>
                            <h1>
                                <field name="name" readonly="True"/>
                            </h1>
                        </div>
                        <notebook>
                            <page string="Rule Information">
                                <group>
                                    <group>
                                        <field name="sport_club_id" readonly="state != 'draft'" options="{'no_create':True,'no_edit':True,'no_open':True,'no_quick_create':True}"/>
                                        <field name="sport_id" readonly="state != 'draft'" options="{'no_create':True,'no_edit':True,'no_open':True,'no_quick_create':True}"/>
                                        <field name="facility_id" readonly="state != 'draft'" options="{'no_create':True,'no_edit':True,'no_open':True,'no_quick_create':True}"/>
                                    </group>
                                    <group>
                                        <field name="date_from" readonly="state != 'draft'" string="Date" widget="daterange" options="{'end_date_field': 'date_to'}" />
                                        <field name="date_to" readonly="state != 'draft'" invisible="1" />
                                        <field name="tax_id" readonly="state != 'draft'" domain="[('type_tax_use','=','sale')]" options="{'no_create':True,'no_edit':True,'no_open':True,'no_quick_create':True}"/>
                                        <field name="base_price" readonly="state != 'draft'"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>

                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="sport_club_pricing_rule_view_kanban" model="ir.ui.view">
            <field name="name">sport.club.pricing.rule.kanban</field>
            <field name="model">sport.club.pricing.rule</field>
            <field name="arch" type="xml">
                <kanban highlight_color="color"
                        default_group_by="state"
                        class="o_kanban_small_column"
                        quick_create="False"
                        records_draggable="False"
                        archivable="False">

                    <field name="name"/>
                    <field name="sport_club_id"/>
                    <field name="sport_id"/>
                    <field name="facility_id"/>
                    <field name="base_price"/>
                    <field name="currency_id"/>
                    <field name="active"/>
                    <field name="priority"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>

                    <templates>
                        <t t-name="menu">

                            <t t-if="widget.editable">
                                <a role="menuitem" type="open" class="dropdown-item">
                                    Edit
                                </a>
                            </t>

                            <t t-if="widget.deletable">
                                <a role="menuitem" type="delete" class="dropdown-item">
                                    Delete
                                </a>
                            </t>

                            <field name="color" widget="kanban_color_picker"/>

                        </t>
                        <t t-name="card">
                            <div class="oe_kanban_global_click o_kanban_card">
                                <field class="fw-bold fs-5 text-primary" name="name"/>

                                <hr/>

                                <div class="d-flex justify-content-between">
                                    <div>
                                        <strong class="text-muted">Club : </strong>
                                        <field name="sport_club_id"/>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <strong class="text-muted">Sport : </strong>
                                        <field name="sport_id"/>
                                    </div>
                                </div>

                                <div class="mt-2 d-flex justify-content-between">
                                    <div>
                                        <strong class="text-muted">Price : </strong>
                                        <field name="base_price"/> <field name="currency_id"/>
                                    </div>
                                </div>

                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="sport_club_pricing_rule_view_graph" model="ir.ui.view">
            <field name="name">sport.club.pricing.rule.graph</field>
            <field name="model">sport.club.pricing.rule</field>
            <field name="arch" type="xml">
                <graph string="Pricing Rule Analysis" type="bar">
                    <field name="sport_club_id" type="row"/>
                    <field name="base_price" type="measure"/>
                    <field name="sport_id" type="col"/>
                    <field name="state" type="col"/>
                </graph>
            </field>
        </record>

        <record id="sport_club_pricing_rule_view_search" model="ir.ui.view">
            <field name="name">sport.club.pricing.rule.search</field>
            <field name="model">sport.club.pricing.rule</field>
            <field name="arch" type="xml">
                <search string="Search Pricing Rules">
                    <field name="name" string="Rule Name"/>
                    <field name="sport_club_id"/>
                    <field name="sport_id"/>
                    <field name="facility_id"/>
                    <field name="active"/>
                    <field name="state"/>

                    <filter string="Active" name="active_filter" domain="[('active','=',True)]"/>
                    <filter string="Inactive" name="inactive_filter" domain="[('active','=',False)]"/>
                    <filter string="Has Date Range" name="date_range_filter" domain="[('date_from','!=',False),('date_to','!=',False)]"/>

                    <group expand="0" string="Group By">
                        <filter string="State" name="group_by_state" context="{'group_by':'state'}"/>
                        <filter string="Club" name="group_by_club" context="{'group_by':'sport_club_id'}"/>
                        <filter string="Sport" name="group_by_sport" context="{'group_by':'sport_id'}"/>
                        <filter string="Facility" name="group_by_facility" context="{'group_by':'facility_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="sport_club_pricing_rule_action" model="ir.actions.act_window">
            <field name="name">Sport Club Pricing Rules</field>
            <field name="res_model">sport.club.pricing.rule</field>
            <field name="view_mode">kanban,list,graph,form</field>
        </record>


    </data>
</odoo>

