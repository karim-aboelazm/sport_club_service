<?xml version="1.0" encoding="utf-8" standalone="no"?>
<odoo>
    <data>
        <record id="sport_club_pricing_rule_view_list" model="ir.ui.view">
            <field name="name">sport.club.pricing.rule.view.list</field>
            <field name="model">sport.club.pricing.rule</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="priority"/>
                    <field name="facility_type"/>
                    <field name="day_of_week"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="time_from"/>
                    <field name="time_to"/>
                    <field name="dynamic_factor" optional="hide"/>
                    <field name="base_price" optional="hide"/>
                    <field name="peak" optional="hide"/>
                    <field name="min_duration" optional="hide"/>
                    <field name="max_duration" optional="hide"/>
                </list>
            </field>
        </record>

        <record id="sport_club_pricing_rule_view_form" model="ir.ui.view">
            <field name="name">sport.club.pricing.rule.view.form</field>
            <field name="model">sport.club.pricing.rule</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <widget name="web_ribbon"
                                title="Archived"
                                bg_color="text-bg-danger"
                                invisible="active"/>
                        <div class="oe_title mb-3">
                            <div>
                                <label for="name"/>
                            </div>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <notebook>
                            <page string="Club &amp; Facility">
                                <group>
                                    <group string="Club &amp; Sport">
                                        <field name="sport_club_id"/>
                                        <field name="sport_id"/>
                                    </group>
                                    <group string="Facility">
                                        <field name="facility_id"/>
                                        <field name="facility_type"/>
                                    </group>
                                    <group string="Taxes &amp; Factor">
                                        <field name="tax_ids" widget="many2many_tags"/>
                                        <field name="dynamic_factor"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Reservation Timing">
                                <group>
                                    <group string="Date Range">
                                        <field name="date_from" string="Date" widget="daterange" options="{'end_date_field': 'date_to'}" />
                                        <field name="date_to" invisible="1" />
                                        <label for="time_from" string="Time"/>
                                        <div class="row d-flex text-center">
                                            <field name="time_from" widget="float_time" class="oe_inline"/>
                                            <span class="oe_inline mx-5">â†’</span>
                                            <field name="time_to" widget="float_time" class="oe_inline"/>
                                        </div>
                                    </group>
                                    <group string="Weekly Schedule">
                                        <field name="day_of_week" widget="selection_badge"/>
                                    </group>
                                </group>
                            </page>

                            <page string="Pricing &amp; Duration">
                                <group>
                                    <field name="base_price"/>
                                    <field name="peak"/>
                                    <field name="min_duration"/>
                                    <field name="max_duration"/>
                                </group>
                            </page>
                        </notebook>

                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="sport_club_pricing_rule_view_kanban" model="ir.ui.view">
            <field name="name">sport.club.pricing.rule.kanban</field>
            <field name="model">sport.club.pricing.rule</field>
            <field name="arch" type="xml">
                <kanban highlight_color="color"
                        default_group_by="sport_club_id"
                        class="o_kanban_small_column"
                        quick_create="False"
                        records_draggable="False"
                        archivable="False">

                    <field name="name"/>
                    <field name="sport_club_id"/>
                    <field name="sport_id"/>
                    <field name="facility_type"/>
                    <field name="facility_id"/>
                    <field name="base_price"/>
                    <field name="currency_id"/>
                    <field name="dynamic_factor"/>
                    <field name="peak"/>
                    <field name="active"/>
                    <field name="priority"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="day_of_week"/>
                    <field name="time_from"/>
                    <field name="time_to"/>
                    <field name="min_duration"/>
                    <field name="max_duration"/>

                    <templates>
                        <t t-name="menu">

                            <t t-if="widget.editable">
                                <a role="menuitem" type="open" class="dropdown-item">
                                    Edit
                                </a>
                            </t>

                            <t t-if="widget.deletable">
                                <a role="menuitem" type="delete" class="dropdown-item">
                                    Delete
                                </a>
                            </t>

                            <field name="color" widget="kanban_color_picker"/>

                        </t>
                        <t t-name="card">
                            <div class="oe_kanban_global_click o_kanban_card">
                                <field class="fw-bold fs-5 text-primary" name="name"/>

                                <hr/>

                                <div class="d-flex justify-content-between">
                                    <div>
                                        <strong class="text-muted">Club : </strong>
                                        <field name="sport_club_id"/>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <strong class="text-muted">Sport : </strong>
                                        <field name="sport_id"/>
                                    </div>
                                </div>

                                <div class="mt-2 d-flex justify-content-between">
                                    <div>
                                        <strong class="text-muted">Price : </strong>
                                        <field name="base_price"/> <field name="currency_id"/>
                                    </div>
                                </div>
                                <div class="mt-2 d-flex justify-content-between">
                                    <div>
                                        <strong class="text-muted">Factor : </strong>
                                        <field name="dynamic_factor"/>
                                    </div>
                                </div>



                                <hr/>

                                <div class="mt-2 d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="fa fa-clock-o text-primary me-1"/>
                                        <t t-if="record.time_from.value and record.time_to.value">

                                            <span>
                                                <t t-esc="record.time_from.value"/>
                                                -
                                                <t t-esc="record.time_to.value"/> H
                                            </span>
                                        </t>
                                    </div>
                                    <t t-if="record.peak.raw_value">
                                        <span class="badge rounded-pill bg-danger">Peak</span>
                                    </t>
                                    <t t-else="">
                                        <span class="badge rounded-pill bg-secondary">Normal</span>
                                    </t>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="sport_club_pricing_rule_view_graph" model="ir.ui.view">
            <field name="name">sport.club.pricing.rule.graph</field>
            <field name="model">sport.club.pricing.rule</field>
            <field name="arch" type="xml">
                <graph string="Pricing Rule Analysis" type="bar">
                    <field name="sport_club_id" type="row"/>
                    <field name="base_price" type="measure"/>
                    <field name="sport_id" type="col"/>
                </graph>
            </field>
        </record>

        <record id="sport_club_pricing_rule_view_search" model="ir.ui.view">
            <field name="name">sport.club.pricing.rule.search</field>
            <field name="model">sport.club.pricing.rule</field>
            <field name="arch" type="xml">
                <search string="Search Pricing Rules">
                    <field name="name" string="Rule Name"/>
                    <field name="sport_club_id"/>
                    <field name="sport_id"/>
                    <field name="facility_id"/>
                    <field name="facility_type"/>
                    <field name="peak"/>
                    <field name="active"/>

                    <filter string="Active" name="active_filter" domain="[('active','=',True)]"/>
                    <filter string="Inactive" name="inactive_filter" domain="[('active','=',False)]"/>
                    <filter string="Peak Pricing" name="peak_filter" domain="[('peak','=',True)]"/>
                    <filter string="Has Date Range" name="date_range_filter" domain="[('date_from','!=',False),('date_to','!=',False)]"/>

                    <group expand="0" string="Group By">
                        <filter string="Club" name="group_by_club" context="{'group_by':'sport_club_id'}"/>
                        <filter string="Sport" name="group_by_sport" context="{'group_by':'sport_id'}"/>
                        <filter string="Facility" name="group_by_facility" context="{'group_by':'facility_id'}"/>
                        <filter string="Facility Type" name="group_by_facility_type" context="{'group_by':'facility_type'}"/>
                        <filter string="Peak" name="group_by_peak" context="{'group_by':'peak'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="sport_club_pricing_rule_action" model="ir.actions.act_window">
            <field name="name">sport club pricing rule</field>
            <field name="res_model">sport.club.pricing.rule</field>
            <field name="view_mode">kanban,list,graph,form</field>
        </record>

        <menuitem
                id="menu_sport_club_pricing_rule"
                name="sport club pricing rule"
                action="sport_club_pricing_rule_action"
                parent="sporting_club_reservation_service.menu_sport_club"
                sequence="6"/>
    </data>
</odoo>
