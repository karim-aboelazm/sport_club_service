<?xml version="1.0" encoding="utf-8" standalone="no"?>
<odoo>
    <data>
        <record id="sport_club_training_session_view_list" model="ir.ui.view">
            <field name="name">sport.club.training.session.view.list</field>
            <field name="model">sport.club.training.session</field>
            <field name="arch" type="xml">
                <list>
                    <field name="currency_id" column_invisible="True"/>
                    <field name="name"/>
                    <field name="trainer_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="price_hour" sum="price_hour"/>
                    <field name="amount_total" sum="amount_total"/>
                </list>
            </field>
        </record>

        <record id="sport_club_training_session_view_form" model="ir.ui.view">
            <field name="name">sport.club.training.session.view.form</field>
            <field name="model">sport.club.training.session</field>
            <field name="arch" type="xml">
                <form create="False" edit="False" delete="False" copy="False">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_reservation"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-calendar-check-o">
                                <div class="o_stat_info">
                                    <span class="o_stat_value">1</span>
                                    <span class="o_stat_text">Reservation</span>
                                </div>
                            </button>
                            <button name="action_view_trainer"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-user">
                                <div class="o_stat_info">
                                    <span class="o_stat_value">1</span>
                                    <span class="o_stat_text">Trainer</span>
                                </div>
                            </button>
                            <button name="action_view_club"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-building">
                                <div class="o_stat_info">
                                    <span class="o_stat_value">1</span>
                                    <span class="o_stat_text">Club</span>
                                </div>
                            </button>
                            <button name="action_view_sport"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-futbol-o">
                                <div class="o_stat_info">
                                    <span class="o_stat_value">1</span>
                                    <span class="o_stat_text">Sport</span>
                                </div>
                            </button>
                        </div>
                        <widget name="web_ribbon"
                                title="Archived"
                                bg_color="text-bg-danger"
                                invisible="active"/>
                        <div class="oe_title mb-3">
                            <div>
                                <label for="name"/>
                            </div>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <hr/>
                        <group>
                            <group>
                                <field name="date_end" invisible="True" />
                                <field name="currency_id" invisible="True"/>
                                <field name="date_start" string="Date" widget="daterange" options="{'end_date_field': 'date_end'}" />
                                <field name="amount_total"/>
                            </group>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="sport_club_training_session_action" model="ir.actions.act_window">
            <field name="name">Sport Club Training Session</field>
            <field name="res_model">sport.club.training.session</field>
            <field name="view_mode">list,form</field>
        </record>


    </data>
</odoo>
