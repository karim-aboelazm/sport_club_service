<?xml version="1.0" encoding="utf-8" standalone="no"?>
<odoo>
    <data>
        <record id="sport_club_training_session_view_list" model="ir.ui.view">
            <field name="name">sport.club.training.session.view.list</field>
            <field name="model">sport.club.training.session</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="trainer_id"/>
                    <field name="player_id"/>
                    <field name="club_id"/>
                    <field name="sport_id"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="duration"/>
                    <field name="level"/>
                    <field name="price_hour"/>
                    <field name="amount_total"/>
                    <field name="reservation_id"/>
                </list>
            </field>
        </record>

        <record id="sport_club_training_session_view_form" model="ir.ui.view">
            <field name="name">sport.club.training.session.view.form</field>
            <field name="model">sport.club.training.session</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" options="{'clickable': '1'}" widget="statusbar"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon"
                                title="Archived"
                                bg_color="text-bg-danger"
                                invisible="active"/>
                        <div class="oe_title">
                            <div>
                                <label for="name"/>
                            </div>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="trainer_id"/>
                            <field name="player_id"/>
                            <field name="club_id"/>
                            <field name="sport_id"/>
                            <field name="date_start"/>
                        </group>
                        <group>
                            <field name="date_end"/>
                            <field name="duration"/>
                            <field name="level"/>
                            <field name="price_hour"/>
                            <field name="amount_total"/>
                            <field name="reservation_id"/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="sport_club_training_session_action" model="ir.actions.act_window">
            <field name="name">sport club training session</field>
            <field name="res_model">sport.club.training.session</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem
                id="menu_sport_club_training_session"
                name="sport club training session"
                parent="sporting_club_reservation_service.menu_sport_club"
                action="sport_club_training_session_action"
                sequence="10"/>
    </data>
</odoo>
