<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sport_club_sports_view_list" model="ir.ui.view">
            <field name="name">sport_club_sports_view_list</field>
            <field name="model">sport.club.sports</field>
            <field name="arch" type="xml">
                <list editable="bottom" sample="1">
                    <field name="name"/>
                    <field name="code"/>
                </list>
            </field>
        </record>

        <record id="sport_club_sports_action" model="ir.actions.act_window">
            <field name="name">Sport Club Sports</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sport.club.sports</field>
            <field name="view_mode">list</field>
        </record>

    </data>
</odoo>
