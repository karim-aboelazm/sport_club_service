<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sport_club_calendar_view_form" model="ir.ui.view">
            <field name="name">sport.club.calendar_view_form</field>
            <field name="model">sport.club.calendar</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <widget name="web_ribbon"
                                title="Archived"
                                bg_color="text-bg-danger"
                                invisible="active"/>

                        <div class="oe_title">
                            <label for="name"/>
                            <h1><field name="name"/></h1>
                        </div>

                        <group name="main_group">
                            <group name="left_group">
                                <field name="club_id" options="{'no_create':True,'no_edit':True,'no_open':True,'no_quick_create':True}"/>
                                <field name="facility_id" domain="[('sport_club_id','=',club_id),('sport_club_id','!=',False)]" options="{'no_create':True,'no_edit':True,'no_open':True,'no_quick_create':True}"/>
                            </group>
                            <group name="right_group"/>
                        </group>

                        <notebook>
                            <page string="Availability Times" name="available_times">
                                <field name="line_ids">
                                    <list editable="bottom">
                                        <field name="day_of_week"/>
                                        <field name="start_time"/>
                                        <field name="end_time"/>
                                    </list>
                                </field>
                            </page>

                            <page string="Exceptions Times" name="exceptions_times">
                                <field name="exception_ids">
                                    <list editable="bottom">
                                        <field name="date_from"/>
                                        <field name="date_to"/>
                                        <field name="reason"/>
                                        <field name="is_closed"/>
                                    </list>
                                </field>
                            </page>

                        </notebook>
                    </sheet>

                    <!-- Chatter: logs, messages, and activities -->
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="sport_club_calendar_view_list" model="ir.ui.view">
            <field name="name">sport.club.calendar_view_list</field>
            <field name="model">sport.club.calendar</field>
            <field name="arch" type="xml">
                <list sample="1">
                    <field name="name"/>
                    <field name="club_id"/>
                    <field name="facility_id"/>
                </list>
            </field>
        </record>

        <record id="sport_club_calendar_action" model="ir.actions.act_window">
            <field name="name">Sport Club Calendar</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sport.club.calendar</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="server_action_open_generate_times_wizard" model="ir.actions.server">
            <field name="name">Generate Available Times</field>
            <field name="model_id" ref="sporting_club_reservation_service.model_sport_club_calendar"/>
            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <field name="code">
                action = records.action_open_generate_times_wizard()
            </field>
        </record>

        <record id="sport_club_calendar_line_view_view_list" model="ir.ui.view">
            <field name="name">sport.club.calendar.view.view.list</field>
            <field name="model">sport.club.calendar.line</field>
            <field name="arch" type="xml">
                <list editable="bottom">
                    <field name="day_of_week"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                    <button name="add_reservation_slot" type="object" icon="fa-plus" class="btn-primary"/>
                </list>
            </field>
        </record>
    </data>
</odoo>