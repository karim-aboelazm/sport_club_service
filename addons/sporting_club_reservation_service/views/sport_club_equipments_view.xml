<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sport_club_equipments_view_view_form" model="ir.ui.view">
            <field name="name">sport.club.equipments.view.view.form.inherit.module</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <span class="d-inline-flex">
                        <field name="is_equipment" on_change="1"/>
                        <label for="is_equipment"/>
                    </span>
                </xpath>
                <xpath expr="//notebook/page[last()]" position="after">
                    <page string="Sport Club Info"  name="sport_club_info" invisible="not is_equipment">
                        <group>
                            <group>
                                <field name="club_id"/>
                                <field name="sport_id"/>
                            </group>
                            <group>
                                <field name="price_hour"/>
                                <field name="deposit"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>