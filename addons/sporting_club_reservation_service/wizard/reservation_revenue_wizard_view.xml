<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_reservation_revenue_wizard_form" model="ir.ui.view">
            <field name="name">reservation.revenue.wizard.form</field>
            <field name="model">reservation.revenue.wizard</field>
            <field name="arch" type="xml">
                <form string="Reservation Revenue Report" create="false" edit="false">
                    <group>
                        <group>
                            <field name="export_format" widget="radio" options="{'horizontal':True}"/>
                            <field name="date_from" string="Date" widget="daterange" options="{'end_date_field': 'date_to'}" />
                            <field name="date_to" invisible="1" />
                        </group>
                        <group>
                            <field name="club_id"/>
                            <field name="sport_id"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_print_report" string="Generate Report" type="object" class="btn-primary"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_reservation_revenue_wizard" model="ir.actions.act_window">
            <field name="name">Reservation Revenue Report</field>
            <field name="res_model">reservation.revenue.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_reservation_revenue_wizard_form"/>
        </record>
    </data>
</odoo>